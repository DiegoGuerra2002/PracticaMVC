    </div>
    <div class="form-group">
        @Html.Label("lblDesc","Descripcion:")
        @Html.TextBox("txtDesc","",new{@class="form-control"})
    </div>
    <div class="form-group">
        @Html.Label("lblequipoID","ID del tipo de equipo")
        @Html.TextBox("txtEquipoID","",new{@class="form-control"})
    </div>
    <div class="form-group">
        @Html.Label("lblMarcaID","ID de la marca: ")
        @Html.TextBox("txtMarcaID","",new{@class="form-control"})
    </div>
    <div class="form-group">
        @Html.Label("lblModelo","Modelo: ")
        @Html.TextBox("txtModel","",new{@class="form-control"})
