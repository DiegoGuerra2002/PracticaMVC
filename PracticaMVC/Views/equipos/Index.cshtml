    <div class="form-group">
        @Html.Label("lblAnio","Año de compra: ")
        @Html.TextBox("txtAnio","",new{@class="form-control"})
    </div>
    <div class="form-group">
        @Html.Label("lblcosto","Costo: ")
        @Html.TextBox("txtCost","",new{@class="form-control"})
    </div>
    <div class="form-group">
        @Html.Label("lblvidautil","Vida Util: ")
        @Html.TextBox("txtvutil","",new{@class="form-control"})
    </div>
    <div class="form-group">
        @Html.Label("lblestadoequipo","ID del estado de equipo: ")
        @Html.TextBox("txtestadoE","",new{@class="form-control"})
    </div>
    <div class="form-group">
        @Html.Label("lblEstado","Estado: ")
        @Html.TextBox("txtEstado","",new{@class="form-control"})
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Guardar"/>
        @Html.ActionLink("Guardar","Guardar","equipos")
    </div>
</div>

